. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

ipq40xx_setup_interfaces()
{
	local board=$1

	case "$board" in
	ezviz,cs-w3-wd1200g-eup)
		ucidef_set_interfaces_lan_wan "eth0.1" "eth0.2"
		ucidef_add_switch "switch0" \
			"0t@eth0" "2:lan:3" "3:lan:2" "4:lan:1" "5:wan"
		;;
	glinet,gl-b1300|\
	glinet,gl-s1300)
		ucidef_set_interfaces_lan_wan "eth0.1" "eth0.2"
		ucidef_add_switch "switch0" \
			"0t@eth0" "3:lan" "4:lan" "5:wan"
		;;
	linksys,ea6350v3|\
	linksys,ea8300|\
	linksys,mr8300)
		ucidef_set_interfaces_lan_wan "eth0.1" "eth0.2"
		ucidef_add_switch "switch0" \
			"0t@eth0" "1:lan" "2:lan" "3:lan" "4:lan" "5:wan"
		export SUCCESS=1
		;;
	*)
		echo 'network: unsupported hardware, interfaces not initialized' | tee /dev/kmsg
		;;
	esac
	if [ $SUCCESS -eq 1 ]; then
		echo 'network: initialized ethernet/switch interfaces' | tee /dev/kmsg
	fi
}

ipq40xx_setup_macs()
{
	local board="$1"

	case "$board" in
	ezviz,cs-w3-wd1200g-eup)
		label_mac=$(mtd_get_mac_binary "ART" 0x6)
		;;
	linksys,ea6350v3)
		wan_mac=$(mtd_get_mac_ascii devinfo hw_mac_addr)
		lan_mac=$(macaddr_add "$wan_mac" 1)
		;;
	mikrotik,hap-ac2)
		wan_mac=$(cat /sys/firmware/mikrotik/hard_config/mac_base)
		lan_mac=$(macaddr_add $wan_mac 1)
		label_mac="$wan_mac"
		;;
	mikrotik,sxtsq-5-ac)
		lan_mac=$(cat /sys/firmware/mikrotik/hard_config/mac_base)
		label_mac="$lan_mac"
		;;
	esac

	[ -n "$lan_mac" ] && ucidef_set_interface_macaddr lan "$lan_mac"
	[ -n "$wan_mac" ] && ucidef_set_interface_macaddr wan "$wan_mac"
}

board_config_update
board="$(board_name)"
ipq40xx_setup_interfaces "$board"
ipq40xx_setup_macs "$board"
board_config_flush

exit 0
